{% extends 'CategoriaBundle::layout_produto.html.twig' %}
{% block body %}

<h1>Produto</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>{{ entity.nome }}</td>
        </tr>
        <tr>
            <th>Unidade</th>
            <td>{{ entity.unidade }}</td>
        </tr>
        <tr>
            <th>Categoria</th>
            <td>{{ entity.categoria.nome }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('produto') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('produto_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('produto_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}